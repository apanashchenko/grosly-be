# OpenAI API Key
# Отримати можна на https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Server
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=grosly
DB_SYNCHRONIZE=true

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# AI Cache TTL (seconds)
AI_CACHE_TTL_GENERATE=3600
AI_CACHE_TTL_SUGGEST=3600
AI_CACHE_TTL_PARSE=21600
AI_CACHE_TTL_CATEGORIZE=604800
